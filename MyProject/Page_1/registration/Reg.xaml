        <TextBlock   Grid.Row="1"  Text="Register" FontSize="70"   Grid.Column="1" FontFamily="Trebuchet MS" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="82" Width="252" Foreground="White" Margin="76,8"/>

        <Grid Grid.Row="3" Grid.Column="1" >
            <TextBlock Text="Name" FontFamily="Trebuchet MS" Foreground="White" FontSize="23"/>
        </Grid>

        <TextBox Grid.Row="5" Grid.Column="1" Background="{x:Null}" Text="FullNAme" Foreground="Gray" />
        <Grid Grid.Row="14" Grid.Column="1" Margin="0,23,0,18" Grid.RowSpan="3" >
            <TextBlock Text="Login" FontFamily="Trebuchet MS" Foreground="White" FontSize="23"/>
        </Grid>
        <TextBox Grid.Row="16" Grid.Column="1" Background="{x:Null}" Text="FullNAme" Foreground="Gray" Margin="0,23,0,0" Grid.RowSpan="2" />
        <Grid Grid.Row="18" Grid.Column="1" Margin="0,30,0,18" Grid.RowSpan="3" >
            <TextBlock Text="Email" FontFamily="Trebuchet MS" Foreground="White" FontSize="23"/>
        </Grid>
        <TextBox Grid.Row="21" Grid.Column="1" Background="{x:Null}" Text="FullNAme" Foreground="Gray" Margin="0,1" />
        <Grid Grid.Row="22" Grid.Column="1" Margin="0,22,0,18" Grid.RowSpan="3" >
            <TextBlock Text="Passsword" FontFamily="Trebuchet MS" Foreground="White" FontSize="23"/>
        </Grid>
        <TextBox Grid.Row="24" Grid.Column="1" Background="{x:Null}" Text="FullNAme" Foreground="Gray" Margin="0,22,0,1" Grid.RowSpan="2" />
        <Grid Grid.Row="26" Grid.Column="1" Margin="0,24,0,192" Grid.RowSpan="3" >
            <TextBlock Text="Confirm password" FontFamily="Trebuchet MS" Foreground="White" FontSize="23" HorizontalAlignment="Right" Width="404"/>
