        <TextBox Grid.Row="28" Grid.Column="1" Background="{x:Null}" Text="Confirmpassword" Foreground="Gray" Margin="0,22,0,148" FontFamily="Trebuchet MS" />
        <Button Grid.Column="1" Margin="0,121,0,45" Grid.Row="28" Background="#1ED5B9" >
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="CREATE ACCOUNT" FontFamily="Trebuchet MS"/>
            </StackPanel>
        </Button>
        <Grid Grid.Row="6" Grid.Column="1" Margin="0,18,0,17" Grid.RowSpan="3" >
            <TextBlock Text="SurName" FontFamily="Trebuchet MS" Foreground="White" FontSize="23"/>
        </Grid>
        <TextBox Grid.Row="9" Grid.Column="1" Background="{x:Null}" Text="FullNAme" Foreground="Gray" Margin="0,1,0,2" />
        <Grid Grid.Row="10" Grid.Column="1" Margin="0,26,0,17" Grid.RowSpan="3" >
            <TextBlock Text="MidleName" FontFamily="Trebuchet MS" Foreground="White" FontSize="23"/>
        </Grid>
        <TextBox Grid.Row="13" Grid.Column="1" Background="{x:Null}" Text="FullNAme" Foreground="Gray" Margin="0,1,0,25" Grid.RowSpan="2" />
    </Grid>
